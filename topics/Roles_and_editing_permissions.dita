    </prolog>
    <refbody>
        <section id="section_w1d_db1_hzb">
            <title>Content Editor</title>
        </section>
        <properties frame="all" id="properties_v3s_qb1_hzb">
            <prophead>
                <proptypehd>Editing permissions</proptypehd>
                <propvaluehd>Additional notes</propvaluehd>
            </prophead>
            <property>
